{
  "check-coverage": false,
  "per-file": true,
  "watermarks": {
    "lines": [80, 95],
    "functions": [90, 98],
    "branches": [80, 95],
    "statements": [80, 95]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/index.ts",
    "src/common/options.ts"
  ],
  "extension": [
    ".ts"
  ],
  "reporter": [
    "text",
    "html",
    "lcov"
  ],
  "cache": false,
  "all": true
}
