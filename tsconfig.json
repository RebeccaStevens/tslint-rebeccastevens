{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "moduleResolution": "node",
    "lib": ["esnext"],
    "skipLibCheck": true,

    // Coding style
    "forceConsistentCasingInFileNames": true,
    "newLine": "LF",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,

    // Output
    "module": "esnext",
    "target": "es2017",
    "sourceMap": false,
    "removeComments": false,
    "isolatedModules": true
  },
  "include": ["src/**/*.ts"]
}
