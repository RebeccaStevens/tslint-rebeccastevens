{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "moduleResolution": "node",
    "lib": ["esnext"],
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules"
    ],

    // Coding style
    "forceConsistentCasingInFileNames": true,
    "newLine": "LF",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,

    // Output
    "module": "commonjs",
    "target": "es5",
    "sourceMap": false,
    "outDir": "rules",
    "removeComments": true
  },
  "include": ["**/*.ts"],
  "exclude": ["src/**/*.ts"]
}
